<!-- Forma to`ldirish -->
  <div class="container">
    <main>
      <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4 my-img" src="images/doctorAli.jpg" alt="" width="100" height="100">
        <h2>Bemor formasi</h2>
        <p class="lead">Iltimos quyidagi bemor haqidagi malumotlarni to'ldiring.</p>
      </div>
      <div class="row g-5">


        <!-- Shifokorlar koriklar soni bolimi -->
        <div class="col-md-5 col-lg-4 order-md-last">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-success">Shifokorlar</span>
          </h4>
          <ul class="list-group mb-3">

            <!-- Zokirjon -->
              <%  if(shifokorArray[0].ishgaKelgan===true){ %>
            <li class="list-group-item d-flex justify-content-between bg-light">
              <div class="text-success">
                <h6 class="my-0">Zokirjon</h6>
                  <small class="text-success">Ishga kelgan</small>
                </div>
                <span class="text-success"> <%= shifokorArray[0].koriklarSoni %> </span>
              </li>
                <%   } else {  %>
                  <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                      <h6 class="my-0">Zokirjon</h6>
                          <small class="text-muted">Ishga kelmagan</small>
                      </div>
                        <span class="text-muted"> <%= shifokorArray[0].koriklarSoni %> </span>
                    </li>
                <%  } %>

                <!-- Ma Ming -->
                <%  if(shifokorArray[1].ishgaKelgan){ %>
              <li class="list-group-item d-flex justify-content-between bg-light">
                <div class="text-success">
                  <h6 class="my-0">Ma Ming</h6>
                    <small class="text-success">Ishga kelgan</small>
                  </div>
                  <span class="text-success"> <%= shifokorArray[1].koriklarSoni %> </span>
                </li>
                  <%   } else {  %>
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                      <div>
                        <h6 class="my-0">Ma Ming</h6>
                            <small class="text-muted">Ishga kelmagan</small>
                        </div>
                          <span class="text-muted"> <%= shifokorArray[1].koriklarSoni %> </span>
                      </li>
                  <%  } %>

              <!-- Akbarali -->
                  <%  if(shifokorArray[2].ishgaKelgan){ %>
                <li class="list-group-item d-flex justify-content-between bg-light">
                  <div class="text-success">
                    <h6 class="my-0">Akbarali</h6>
                      <small class="text-success">Ishga kelgan</small>
                    </div>
                    <span class="text-success"> <%= shifokorArray[2].koriklarSoni %> </span>
                  </li>
                    <%   } else {  %>
                      <li class="list-group-item d-flex justify-content-between lh-sm">
                        <div>
                          <h6 class="my-0">Akbarali</h6>
                              <small class="text-muted">Ishga kelmagan</small>
                          </div>
                            <span class="text-muted"> <%= shifokorArray[2].koriklarSoni %> </span>
                        </li>
                    <%  } %>

                    <%  if(shifokorArray[3].ishgaKelgan){ %>
                  <li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                      <h6 class="my-0">Ahrorjon</h6>
                        <small class="text-success">Ishga kelgan</small>
                      </div>
                      <span class="text-success"> <%= shifokorArray[3].koriklarSoni %> </span>
                    </li>
                      <%   } else {  %>
                        <li class="list-group-item d-flex justify-content-between lh-sm">
                          <div>
                            <h6 class="my-0">Ahrorjon</h6>
                                <small class="text-muted">Ishga kelmagan</small>
                            </div>
                              <span class="text-muted"> <%= shifokorArray[3].koriklarSoni %> </span>
                          </li>
                      <%  } %>

                        <!-- Dilmurodjon -->
                      <%  if(shifokorArray[4].ishgaKelgan){ %>
                    <li class="list-group-item d-flex justify-content-between bg-light">
                      <div class="text-success">
                        <h6 class="my-0">Dilmurodjon</h6>
                          <small class="text-success">Ishga kelgan</small>
                        </div>
                        <span class="text-success"> <%= shifokorArray[4].koriklarSoni %> </span>
                      </li>
                        <%   } else {  %>
                          <li class="list-group-item d-flex justify-content-between lh-sm">
                            <div>
                              <h6 class="my-0">Dilmurodjon</h6>
                                  <small class="text-muted">Ishga kelmagan</small>
                              </div>
                                <span class="text-muted"> <%= shifokorArray[4].koriklarSoni %> </span>
                            </li>
                        <%  } %>
                <!-- Hojibobo -->
                        <%  if(shifokorArray[5].ishgaKelgan){ %>
                      <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                          <h6 class="my-0">Hojimurod</h6>
                            <small class="text-success">Ishga kelgan</small>
                          </div>
                          <span class="text-success"> <%= shifokorArray[5].koriklarSoni %> </span>
                        </li>
                          <%   } else {  %>
                            <li class="list-group-item d-flex justify-content-between lh-sm">
                              <div>
                                <h6 class="my-0">Hojimurod</h6>
                                    <small class="text-muted">Ishga kelmagan</small>
                                </div>
                                  <span class="text-muted"> <%= shifokorArray[5].koriklarSoni %> </span>
                              </li>
                          <%  } %>

            <li class="list-group-item d-flex justify-content-between">
              <span>Jami koriklar</span>
              <strong> <%= korikSoni %> </strong>
            </li>
          </ul>
        </div>


<!-- Bemor malumotlarini to'ldirish bo'limi -->
        <div class="col-md-7 col-lg-8">
          <h4 class="mb-3">Bemor malumotlari</h4>
          <form class="needs-validation" action="/qabulhona" method="post" novalidate>
            <div class="row g-3">
              <div class="col-sm-6">
                <label for="firstName" class="form-label">Ism</label>
                <input type="text" class="form-control" name="ism" id="firstName" placeholder="Akbarali" required>
                <div class="invalid-feedback">
                  Iltimos bemor ismini kiriting.
                </div>
              </div>

              <div class="col-sm-6">
                <label for="lastName" class="form-label">Familiya</label>
                <input type="text" class="form-control" name="familiya" id="lastName" placeholder="Bekmurodov" required>
                <div class="invalid-feedback">
                  Iltimos bemor familiyasini kiriting.
                </div>
              </div>


              <div class="col-12">
                <label for="birthYear" class="form-label">Tugulgan yil</label>
                <input type="text" class="form-control" name="tugulganYili" id="birthYear" placeholder="1991" required>
                <div class="invalid-feedback">
                  Iltimos bemor tugulgan yilini kiriting.
                </div>
              </div>

              <div class="col-6">
                <label for="username" class="form-label">Tel. raqam</label>
                <div class="input-group has-validation">
                  <span class="input-group-text">+998</span>
                  <input type="text" name="telRaqami" class="form-control" id="username" placeholder="90-900-00-00" required>
                  <div class="invalid-feedback">
                    Iltimos bemor telefon raqamini kiriting.
                  </div>
                </div>
              </div>



                 <!-- Call-Center -->
              <div class="col-md-6">
                <label for="callCenter" class="form-label">Call center</label>
                <select class="form-select" name="callCenter" id="callCenter" required>

                </select>
                <div class="invalid-feedback">
                  Iltimos call center azolaridan birini tanlang.
                </div>
              </div>



              <!-- Viloyatlar -->
              <div class="col-md-6">
                <label for="viloyat" class="form-label">Viloyat</label>
                <select class="form-select" name="viloyati" id="viloyat" required>
                  <option value="">Tanlang...</option>
                </select>
                <div class="invalid-feedback">
                  Iltimos viloyatlardan birini tanlang.
                </div>
              </div>


              <!-- Tumanlar -->
              <div class="col-md-6">
                <label for="tuman" class="form-label">Tuman</label>
                <select class="form-select" id="tuman" name="tumani" >
                  <option value="">Tanlang...</option>
                  <option>California</option>
                </select>
              </div>

            <hr class="my-4">


            <div class="form-check">
              <input name="qaytaKorik" type="checkbox" class="form-check-input" id="save-info">
              <label class="form-check-label" for="save-info">Qayta ko`rik</label>
            </div>

            <hr class="my-4">

            <h4 class="mb-3">To`lov</h4>

            <div class="row">
              <div class="my-4 col-md-6">
                <div class="form-check">
                  <input id="credit" name="paymentMethod" value="naqd" type="radio" class="form-check-input" checked required>
                  <label class="form-check-label" for="credit">Naqd pul</label>
                </div>
                <div class="form-check">
                  <input id="debit" name="paymentMethod" type="radio" value="karta" class="form-check-input" required>
                  <label class="form-check-label" for="debit">Plastik karta</label>
                </div>
              </div>


              <div class="col-md-6">
                <label for="cc-name" class="form-label">Summa</label>
                <input name="summa" type="text" class="form-control" id="cc-name" placeholder="50.000" required>
              </div>
            </div>


              <div class="col-md-6">
                <label for="cc-number" class="form-label">Kelgan sanasi</label>
                <input name="sanasi" type="date" class="form-control" id="cc-number" required>
                <div class="invalid-feedback">
                  Iltimos bemor tashrif sanasini kiriting.
                </div>
              </div>

              <div class="col-md-6">
                <label for="shifokor" class="form-label">Shifokor</label>
                <select name="shifokori" class="form-select" id="shifokor" required>
                  <option value="">Tanlang...</option>
                  <option value="Zokirjon">Zokirjon</option>
                  <option value="Ma Ming">Ma Ming</option>
                  <option value="Akbarali">Akbarali</option>
                  <option value="Ahrorjon">Ahrorjon</option>
                  <option value="Dilmurodjon">Dilmurodjon</option>
                  <option value="Hojimurod">Hojimurod</option>
                </select>
                <div class="invalid-feedback">
                  Iltimos viloyatlardan birini tanlang.
                </div>
              </div>


            <hr class="my-4">

            <button class="w-100 btn btn-success btn-lg" type="submit">Bemor malumotlarini saqlash</button>
          </form>
        </div>
      </div>
    </main>



  </div>

